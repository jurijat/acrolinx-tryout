ACROLINX_API_TOKEN=
PUBLIC_ACROLINX_BASE_URL=
PUBLIC_ACROLINX_CLIENT_SIGNATURE=Test-Client
PUBLIC_ACROLINX_CLIENT_VERSION=1.0.0
PUBLIC_ENCRYPTION_KEY=your-secret-encryption-key-change-this-in-production

# LLM Provider Configuration
# Options: sap-ai-core, openai, openrouter, or any OpenAI-compatible endpoint
LLM_PROVIDER=openai

# SAP AI Core Configuration
# Store the entire service key as a JSON string (for SDK)
# IMPORTANT: Make sure to escape any $ characters in the clientsecret with \$
# Example: AICORE_SERVICE_KEY='{"clientsecret":"abc\$xyz","...":"..."}'
AICORE_SERVICE_KEY=
# Resource group for AI Core
AICORE_RESOURCE_GROUP=default

# OpenAI Configuration (optional - only needed if using OpenAI as provider)
OPENAI_API_KEY=
OPENAI_BASE_URL=
